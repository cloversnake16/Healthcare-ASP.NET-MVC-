@model IEnumerable<Crunching.Models.Milestones>
@{
    Layout = null;
}

@Html.Partial("Init")

    <div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<script type="text/javascript">
			    try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
			</script>

			<ul class="breadcrumb">
				<li>
					<i class="icon-home home-icon"></i>
					<a href="@Url.Action("Index","Home")">Home</a>

					<span class="divider">
						<i class="icon-angle-right arrow-icon"></i>
					</span>
				</li>
				<li class="active">Milestones</li>
			</ul><!--.breadcrumb-->
		</div>
		<div class="page-content">
			<div class="row-fluid">
				<div class="span12">
					<!--PAGE CONTENT BEGINS-->
                    <div class="row-fluid">
                       <p>
                            <a href="@Url.Action("Create", "Milestones")" class="btn btn-success ">
                                <i class="icon-plus bigger-125"></i> Create a milestone</a>
                        </p>
                        <div class="clearfix"></div>
						<div class="table-header">
							Milestones
						</div>
                        <table id="tItems" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
                                    <th>Text</th>
                                   <th>Date</th>
                                    <th>ID</th>
						       </tr>
								</thead>

								<tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.text</td>
                        				    <td><a href="@Url.Action("Edit", new { id = item.id })" >@item.activationDate.ToShortDateString()</a></td>
                                            <td>@item.id</td>
                                        </tr>
                                    }
								</tbody>
						</table>
                    </div>
			
            <br />
          
			
					<!--PAGE CONTENT ENDS-->
				</div><!--/.span-->
			</div><!--/.row-fluid-->
		</div><!--/.page-content-->

	</div><!--/.main-content-->
    <script>
        $(document).ready(function () {
            $('#tItems').DataTable();
        }); 
    </script>
@Html.Partial("end")	
<style>.dataTables_filter input { width: 500px }</style>
@model GTPTracker.VM.ProductsVM
@{
    Layout = null;
}

@Html.Partial("InitProducts")

    <div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<script type="text/javascript">
			    try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
			</script>

			<ul class="breadcrumb">
				<li>
					<i class="icon-home home-icon"></i>
					<a href="@Url.Action("Index","Home")">Home</a>

					<span class="divider">
						<i class="icon-angle-right arrow-icon"></i>
					</span>
				</li>
				<li class="active">My products</li>
			</ul><!--.breadcrumb-->
		</div>
		<div class="page-content">
			<div class="row-fluid">
				<div class="span12">
					<!--PAGE CONTENT BEGINS-->
                    <div class="row-fluid">
                         
                        <div class="clearfix">

                        
                            <div class="row-fluid">
								<div class="span12">
								
												    <div class="table-header">
							                            Products in use
						                            </div>
                                                    <table id="tProducts" class="table table-striped table-bordered table-hover">
							                            <thead>
									                            <tr>
                                                                    <th>Reference</th>
                                                                    <th>Type</th>
                                                                    <th>Category</th>
										                            <th>Serie</th>
                                                                    <th>Volume</th>
                                                                    <th>Modulus</th>
                                                                    <th></th>
									                            </tr>
								                            </thead>

								                            <tbody>
                                                                @foreach (var item in Model.lProducts)
                                                                {
                                                                    <tr>
                                                                        <td>@item.refNumber</td>
                                                                        <td>@item.type</td>
                                                                        <td>@item.category</td>
										                                <td>@item.serie</td>
                                                                        <td>@item.volume</td>
										                                <td>@item.modulus</td>
										                                <td><!-- <a href="@Url.Action("RequestSample", "Products", new { id = @item.id })" class="btn btn-mini btn-success">
                                                                                <i class="icon-phone"></i> Request Sample</a>-->
                                                                            <a href="@Url.Action("Details", "Products", new { id = @item.id })" class="btn btn-mini btn-success">
                                                                                View Details</a>        
                                                                        </td>
                                                                    </tr>
                                                                }
								                            </tbody>
						                            </table>
                                 </div>
								           
										</div>
									</div>

								</div>
                            </div>
                        
                    </div>
					<!--PAGE CONTENT ENDS-->
				</div><!--/.span-->
			</div><!--/.row-fluid-->
		</div><!--/.page-content-->

	</div><!--/.main-content-->

@Html.Partial("end")	

<script src="@Url.Content("~/assets/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.dataTables.bootstrap.js")"></script>

<script type="text/javascript">
    $('#tProducts').dataTable();
</script>
<style>.dataTables_filter input { width: 500px }</style>
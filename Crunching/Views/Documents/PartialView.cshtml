@model IEnumerable<Crunching.Models.vGenDocs>
@{
    Layout = null;
}
    <!-- INTRO GENERAL BEGIN -->

    <div class="row margin-bottom-xxl">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="text-primary" style="color:#fff; text-align: center;">General documents</h1>
        </div>
        <div class="col-sm-10 col-sm-offset-1">
            <article class="margin-bottom-xxl">
                <p class="lead" style="color:#D8E5EF; text-align: center;">
                    Here you'll find everything about GTP and its products.
                </p>
            </article>
        </div>
    </div>

  <!--  <div class="row margin-bottom-xxl">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="text-primary" style="color:#fff;">General documents</h1>
        </div>
    </div>-->
    <!-- END GENERAL INTRO -->
    <!-- GENERAL DOCUMENTS -->
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 margin-bottom-xxl">
            <div class="card card-default" > <!-- style-primary  card-outlined card-underline card-outlined -->
              <!--  <div class="card-head-with-button-right card-head card-head-lg">
                    <header>
                        Here you'll find everything about GTP and its products
                    </header>
                </div><!--end .card-head -->
                <div class="card-body no-padding-bottom">
                    <!-- TABLE START -->
                    <table class="table table-hover vertical-divided">
                        <tbody>
                            @if ((bool)Session["PERMDOCUMENTS"] == true)
                            {
                                if (Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="col-sm-5"><span>@item.filename</span> <i data-toggle="tooltip" data-placement="top" title="" data-original-title="@item.status" class="product_status @item.status">&nbsp;</i></td>
                                        <td class="col-sm-5">@item.CategoryName</td>
                                        <td class="col-sm-2">
                                            <a target="_blank" href="@Url.Content("~/Content/Images/" + @item.URI)" type="button" class="document-gtp btn ink-reaction btn-default-bright"><i class="fa fa-file-o"></i> Download</a>
                                        </td>
                                    </tr>
                                    }
                                }
                                if (Model.Count() == 0)
                                {
                                <div class="row">
                                    <div class="col-sm-10 col-sm-offset-1 margin-bottom-xxl">
                                        <div style="font-size: 20px; text-align: center;">
                                                    <header>
                                                        <h5>We are sorry, no document matches the search criteria</h5>
                                                    </header>
                                        </div>
                                    </div>
                                </div>
                                }
                            }
                        </tbody>
                    </table>
                    <!-- TABLE END -->
                </div>
            </div><!--end .card -->
        </div><!--end .col -->
    </div><!--end .row -->

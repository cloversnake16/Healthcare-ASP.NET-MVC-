@model Crunching.Models.ChangePasswordModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}
@Html.Partial("Init")
<link href="@Url.Content("~/assets/css/dropzone.css")" rel="stylesheet" type="text/css" />

	<!-- BEGIN auth css-->
<link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet' type='text/css' />
<link type="text/css" rel="stylesheet" href="@Url.Content("~/assets/css/material.indigo-blue.min.css")" />
<link type="text/css" rel="stylesheet" href="https://rawgit.com/MEYVN-digital/mdl-selectfield/master/mdl-selectfield.min.css" />
<link type="text/css" rel="stylesheet" href="@Url.Content("~/assets/css/auth.css")" />
<link type="text/css" rel="stylesheet" href="@Url.Content("~/assets/css/Helpers.css")" />
<!-- END auth css-->

<header id="header-filter" class="header-close">
    <div class="header-filter-menu">
        <a href="@Url.Action("Index", "Catalog")" class="margin-right-xxl margin-left-xxl" style="color:#fff;"><i class="fa fa-long-arrow-left margin-right-xl"></i> Back to home</a>
    </div>
</header>
<!-- BEGIN CONTENT-->
<div class="center-panels">
	<div class="row">
		<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
			<div class="login-panel" style="margin-top: 80px;">
				<div class="demo-card-wide mdl-card mdl-shadow--8dp mdl-card--wide">
					<div class="row">
						<div style="text-align: center;">
							<div class="login-logo">
								<!--<img src="http://www.gtptoolbox.com/assets/img/gtp-logo.jpg" alt="" />-->
                                <img src="@Url.Content("~/assets/img/gtp-logo.jpg")" alt="" />
							</div>
							<h5>GTP ToolBox</h5>
						</div>
					</div>
					<div class="mdl-card__actions">
						<div class="row">
							<div class="col-xs-10 col-xs-offset-1">
								@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @role = "form", enctype = "multipart/form-data", @id = "Create", novalidate = "novalidate" , @class="mdl-form-wide"}))
								{
									@Html.ValidationSummary(true, "Changing password was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-danger", role = "alert" })
									<div class="mdl-textfield mdl-js-textfield">
										@Html.TextBoxFor(model => model.OldPassword, new { @type = "password", @class = "mdl-textfield__input", required = "reqiured" })
										<label class="mdl-textfield__label" for="OldPassword">Old Password</label>
										@Html.ValidationMessageFor(model => model.OldPassword)
									</div>
									<div class="mdl-textfield mdl-js-textfield">
										@Html.TextBoxFor(model => model.NewPassword, new { @type = "password", @class = "mdl-textfield__input", required = "reqiured", @data_rule_minlength = "6" })
										<label class="mdl-textfield__label" for="NewPassword">New Password</label>
										@Html.ValidationMessageFor(model => model.NewPassword)
									</div>
									<div class="mdl-textfield mdl-js-textfield">
										@Html.TextBoxFor(model => model.ConfirmPassword, new { @type = "password", @class = "mdl-textfield__input", required = "reqiured", @data_rule_minlength = "6" })
										<label class="mdl-textfield__label" for="ConfirmPassword">Confirm Password</label>
										@Html.ValidationMessageFor(model => model.ConfirmPassword)
									</div>
									<div class="signin-button" style="margin-bottom: 25px;">
										<button class="mdl-button mdl-js-button mdl-button--raised
													mdl-js-ripple-effect mdl-button--accent mdl-button--wide" type="submit">
											Change Password
										</button>
									</div>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@Html.Partial("end")


<script src="@Url.Content("~/assets/js/libs/jquery-validation/dist/jquery.validate.min.js")" type="text/javascript"></script>

<!-- BEGIN auth js-->
<script src="@Url.Content("~/assets/js/libs/material.min.js")"></script>
<script src="https://rawgit.com/MEYVN-digital/mdl-selectfield/master/mdl-selectfield.min.js"></script>
<!-- END auth js-->
<script>
    $(document).ready(
        $('#my-awesome-dropzone').dropzone({
            url: '/Tickets/CreateProject',
            paramName: "files",
            uploadMultiple: false
        })
    );
</script>
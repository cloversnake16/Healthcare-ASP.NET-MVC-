@model Crunching.Models.Tickets

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@Html.Partial("Init")

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

			<div class="main-content">
				<div class="breadcrumbs" id="breadcrumbs">
					<script type="text/javascript">
					    try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
					</script>

					<ul class="breadcrumb">
						<li>
							<i class="icon-home home-icon"></i>
							<a href="@Url.Action("Index","Home")">Home</a>
                            <span class="divider"><i class="icon-angle-right arrow-icon"></i></span>
						</li>
                            <a href="@Url.Action("Index","Tickets")">Tickets</a>
                            <span class="divider"><i class="icon-angle-right arrow-icon"></i></span>
						<li class="active">Close Ticket</li>
					</ul><!--.breadcrumb-->
				</div>

				<div class="page-content">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
					<div class="row-fluid">
						<div class="span10">
							<!--PAGE CONTENT BEGINS-->
                            <div class="widget-box">
								<div class="widget-header">
									<h4>Close the ticket. Enter the resolution data</h4>
								</div>
                                
                                <div class="widget-body">
                                <!--    <div class="alert alert-success" role="alert">Well done :) Please provide the customer with the following information:<br /><br />

                                    For "Sample request":<br />
                                    - ETD (Estimated Date of Departure)<br />
                                    - ETA (Estimated Date of Arrival)<br /><br />

                                    For "Claims" and "Technical questions"<br />
                                    - Reason for the issue<br />
                                    - Action we take shortly<br />
                                    - Action we consider in the long term</div>-->
									<div class="widget-main">
                                      <!--  <div class="control-group">
									        <label class="control-label">ID</label>
                                            @Html.DisplayFor(model => model.id)
								        </div> -->
                                        <div class="control-group">
									        <label class="control-label">Reason for closing the ticket</label>
                                            @Html.TextAreaFor(model => model.reason, new { @class = "span12", @rows = 10 })
								        </div>
                                 <!--       <div class="control-group ">
									        <label class="control-label">Action we take shortly</label>
                                            @Html.TextAreaFor(model => model.shortTimeAction, new { @class = "span11" })
								        </div>
                                        <div class="control-group ">
									        <label class="control-label">Action we consider in the long term </label>
                                            @Html.TextAreaFor(model => model.longTimeAction, new { @class = "span11" })	
								        </div>-->
                                       
                                  </div>
								</div>
							</div>
                            
                            <div class="form-actions">
           					    <button class="btn btn-info" type="button" onclick="javascript:document.forms[0].submit()">
									<i class="icon-ok bigger-110"></i>
									Save
								</button>
								&nbsp; &nbsp; &nbsp;
								<button class="btn" type="reset" onclick="javascript:location.href='@Url.Action("Details", "Tickets", new { id = Model.id })'">
									<i class="icon-undo bigger-110"></i>
									Cancel
								</button>
							</div>
							<!--PAGE CONTENT ENDS-->
						</div><!--/.span-->
					</div><!--/.row-fluid-->
                }
				</div><!--/.page-content-->

				
			</div><!--/.main-content-->

@Html.Partial("end")